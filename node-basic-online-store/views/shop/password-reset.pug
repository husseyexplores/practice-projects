extends ../layouts/main-layout.pug

block content
  main
    h1.center-text Reset Your Password

    include ../includes/flash-msgs.pug

    form.login-form.centered-form(action='/password-reset', method='POST')
      input(type='hidden', name='_csrf' value=csrfToken)
      .form-control
        label(for='email') Email
        input#email(type='text', name='email', placeholder='Email')

      button.btn(type='submit') Reset password