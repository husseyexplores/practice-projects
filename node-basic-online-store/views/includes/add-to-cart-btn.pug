if isAuthenticated
  form(action='/cart' method='POST')
    input(type='hidden', name='_csrf' value=csrfToken)
    input(type='hidden', name='id', value=product._id)
    button(class='px-2 sm:px-6 btn py-2 mt-2 bg-purple-500 shadow hover:shadow-md hover:bg-purple-400 text-white border-0', type='submit') Add to Cart